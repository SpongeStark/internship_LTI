<Window x:Class="View.BaumWelch"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="BaumWelch" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ProgressBar x:Name="progressBar" Grid.Row="0" Value="30" Height="20" Margin="20,20,20,0"/>
        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="txtResult" TextWrapping="Wrap" Margin="10" Text="" />
            </ScrollViewer>
        </Border>
    </Grid>
</Window>
