<Window x:Class="View.MatrixWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:controls="clr-namespace:WpfMath.Controls;assembly=WpfMath"
        mc:Ignorable="d"
        Title="MatrixWindow" Height="300" Width="400">
    <Grid Name="myGrid">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" >
            <controls:FormulaControl Name="myFormula" Formula="\pmatrix{1 &amp; 2 &amp; 3 \\4 &amp; 5&amp; 6}" 
                    Margin="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Scale="60"/>
        </ScrollViewer>

    </Grid>
</Window>
