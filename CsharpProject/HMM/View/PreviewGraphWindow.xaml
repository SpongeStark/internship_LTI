<Window x:Class="View.PreviewGraphWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:wpf="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="PreviewGraphWindow" Height="450" Width="800">
    <Grid>
        <wpf:CartesianChart Zoom="X">
            <wpf:CartesianChart.Series>
                
                <wpf:StepLineSeries Name="observsLine" Values="1,2,1,2,2,2,3,1,3,2,3,3,2,3,2,2,3,1,2,1,1,2,3,1,1,1,2,2,3,1,3,3,1,2,3" />
                
                <!--
                <wpf:StepLineSeries Values="2,1,1,1,1,2,1,2,2,2,2,1,1,1,1,1,1,2,2,2,1,1,2,2,1,2,1,2,2,1,1,1,1,1,2" AlternativeStroke="Transparent"
                                    PointGeometry="{x:Null}" StrokeThickness="3"/>
                -->
            </wpf:CartesianChart.Series>
        </wpf:CartesianChart>
    </Grid>
</Window>
